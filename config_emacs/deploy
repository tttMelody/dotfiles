ln -sif ~/dotfiles/config_emacs/emacs.el ~/.emacs
if [[ ! -L ~/.emacs.d/config ]]; then
	ln -sif ~/dotfiles/config_emacs/config ~/.emacs.d/config
fi
if [[ ! -L ~/.emacs.d/el-get-user ]]; then
	ln -sif ~/dotfiles/config_emacs/el-get-user ~/.emacs.d/el-get-user
fi
